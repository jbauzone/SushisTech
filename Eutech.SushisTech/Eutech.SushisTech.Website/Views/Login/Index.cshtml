@using Eutech.SushisTech.Website.Resources.Views.Login
@model Eutech.SushisTech.Models.Login.LoginViewModel
@{
    ViewBag.Title = LoginIndexRes.PageTitle;
}


@using (Html.BeginForm("index", "login", FormMethod.Post, new { @class = "form-signin", role = "form" })) { 
    
    <div class="panel panel-default">
        
        <div class="panel-heading"><h3 class="panel-title">@LoginIndexRes.AccessMyAccount</h3></div>
            
        <div class="panel-body">
            <div class="form-group">
                <label>@LoginIndexRes.Email
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </label>
            </div>
    
            <div class="form-group">
                <label>@LoginIndexRes.Password
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </label>
            </div>

            @Html.CheckBoxFor(m => m.RememberMe)
    
            <input type="submit" value="@LoginIndexRes.Connect" class="btn btn-lg btn-primary btn-block" />
        </div>
    </div>
}
